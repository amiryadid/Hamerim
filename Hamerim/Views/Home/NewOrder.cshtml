                };

    ViewBag.ChosenClub = null;
}

@if (ViewBag.chosenClub == null)
{
    <div class="fullHeight blackCard">
        <header class="flex header">
            <div class="flex headerTitle purple">
                <div class="title">
                    בואו נבחר מועדון
                </div>
                <div class="arrowUp"></div>
            </div>
            <div class="headerLeft switch-container">
                <label class="switch-text">מפה</label>
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
                <label class="switch-text">טבלה</label>
            </div>
        </header>
        <div class="flex contenct">
            @foreach (var club in ViewBag.Clubs as IList<Hamerim.Models.Club>)
            {
                <div class="flex card">
                    <div class="card-body">
                        <p class="card-title">@club.Name</p>
                        <p class="card-subtitle">@club.PrintAddress()</p>
                        <p class="card-footer">@String.Format("{0:n0}", club.Cost)&#8362; לערב</p>
                    </div>
                    <button type="button" class="btn done-btn" id="chooseClub">בחרתי!</button>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="blackCard">
        <header class="flex header">
            <div class="flex headerTitle black">
                <div class="title">
                    המועדון שלי
                </div>
                <div class="arrowUp"></div>
            </div>
        </header>
        <div class="flex contenct">
            <div class="flex card">
                <div class="card-body">
                    <p class="card-title">@ViewBag.ChosenClub.Name</p>
                    <p class="card-subtitle">@ViewBag.ChosenClub.PrintAddress()</p>
                    <p class="card-footer">@String.Format("{0:n0}", ViewBag.ChosenClub.Cost)&#8362; לערב</p>
                </div>
                <button type="button" class="btn done-btn">בחרתי!</button>
            </div>
        </div>
    </div>
}
